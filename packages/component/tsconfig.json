{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/**.json",
    "**/**.d.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "dist/types",
    "noImplicitAny": false,
    "allowJs": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
